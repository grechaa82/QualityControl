<Window x:Class="ControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управляющее приложение" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ToggleButton x:Name="GreenToggle" Content="Годный/Брак" Width="150" Margin="5"/>
            <Button x:Name="CameraButton" Content="Камера" Width="150" Margin="5" Click="CameraButton_Click"/>
            <Button x:Name="PusherButton" Content="Толкатель" Width="150" Margin="5" Click="PusherButton_Click"/>
        </StackPanel>
        <Button x:Name="ReconnectButton" 
            Content="Переподключиться"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" 
            Margin="10"
            Width="150"
            Click="ReconnectButton_Click"/>
    </Grid>
</Window>